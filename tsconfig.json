{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "noEmit": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "allowUnreachableCode": true,
        "lib": [
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "koa",
            "koa-convert",
            "mocha",
            "should"
        ],
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": [
        "node_modules",
        "build",
        "**/*.test.ts",
        "temp"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}